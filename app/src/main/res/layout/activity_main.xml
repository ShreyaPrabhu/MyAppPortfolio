<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/my_title"
        android:id="@+id/appTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/appTitle"
        android:layout_alignStart="@+id/appTitle">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|center_horizontal">

        <Button

            android:text="@string/media_streamer"
            android:id="@+id/spotifyButton"
            android:onClick="SpotifyToast"
            style="@style/AppButton" />

        <Button

            android:text="@string/super_duo1"
            android:id="@+id/scoreButoon"
            android:onClick="ScoresToast"
            style="@style/AppButton"/>

        <Button

            android:text="@string/super_duo2"
            android:id="@+id/libraryButton"
            android:onClick="LibraryToast"
            style="@style/AppButton"/>

        <Button

            android:text="@string/ant_terminator"
            android:id="@+id/builditButton"
            style="@style/AppButton"
            android:onClick="BuildItToast"/>

        <Button

            android:text="@string/materialise"
            android:id="@+id/xyzreaderButton"
            android:onClick="MaterialiseToast"
            style="@style/AppButton"/>

        <Button

            android:text="@string/capstone"
            android:id="@+id/capstoneButton"
            android:onClick="CapstoneToast"
            style="@style/AppButton"
            android:background="@color/CapstoneColor" />

    </LinearLayout>
    </ScrollView>

</RelativeLayout>
